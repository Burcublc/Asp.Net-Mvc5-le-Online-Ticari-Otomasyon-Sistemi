@model MvcOnlineTicariOtomasyonSistemi.Models.Siniflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Departman Ekleme Sayfası</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
            </div>
            <div class="card-body">
                <form class="form-group" method="post">
                    <font size="4" color="red">@Html.Label("Departman Adı:")</font> 
                    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-info">KAYDET</button>
                </form>
            </div>
        </div>
</main>
