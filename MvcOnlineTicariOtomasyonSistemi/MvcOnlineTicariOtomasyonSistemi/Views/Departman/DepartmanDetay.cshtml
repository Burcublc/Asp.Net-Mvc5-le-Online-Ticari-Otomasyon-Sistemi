@using MvcOnlineTicariOtomasyonSistemi.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">@ViewBag.dptad  Departmanı Personel Sayfası</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
            </div>
            <div class="card-body">
             
                    <table class="table table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>AD</th>
                                <th>SOYAD</th>
                                <th>GÖRSEL</th>
                                <th>SATIŞLAR</th>

                            </tr>
                        </thead>                
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.PersonelId</td>
                                    <td>@p.PersonelAd</td>
                                    <td>@p.PersonelSoyad</td>
                                    <td><img src="@p.PersonelGorsel" style="width:100px;height:50px" /></td>
                                    <td><a href="/Departman/DepartmanPersonelSatis/@p.PersonelId" class="btn btn-default" style="background-color:coral">SATIŞLAR</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
</main>