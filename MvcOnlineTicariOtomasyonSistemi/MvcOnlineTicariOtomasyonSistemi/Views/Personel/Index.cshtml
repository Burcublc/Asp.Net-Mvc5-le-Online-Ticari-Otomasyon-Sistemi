@using MvcOnlineTicariOtomasyonSistemi.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Personeller</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Personeller Listesi

            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>AD</th>
                                <th>SOYAD</th>
                                <th>FOTOĞRAF</th>
                                <th>DEPARTMAN ADI</th>
                                <th>GÜNCELLE</th>
                                <th>SATIŞLAR</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>AD</th>
                                <th>SOYAD</th>
                                <th>FOTOĞRAF</th>
                                <th>DEPARTMAN ADI</th>
                                <th>GÜNCELLE</th>
                                <th>SATIŞLAR</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.PersonelId</td>
                                    <td>@p.PersonelAd</td>
                                    <td>@p.PersonelSoyad</td>
                                    <td><img src="@p.PersonelGorsel" style="width:100px;height:50px" /></td>
                                    <td>@p.Departman.DepartmanAd</td>
                                    <td><a href="/Personel/PersonelGetir/@p.PersonelId" class="btn btn-success">GÜNCELLE</a></td>
                                    <td><a href="/Departman/DepartmanPersonelSatis/@p.PersonelId" class="btn btn-warning">PERSONEL SATIŞ HAREKETLERİ</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Personel/PersonelEkle/" class="btn btn-primary">YENİ OLUŞTUR</a>
                </div>
            </div>
        </div>
    </div>
</main>




