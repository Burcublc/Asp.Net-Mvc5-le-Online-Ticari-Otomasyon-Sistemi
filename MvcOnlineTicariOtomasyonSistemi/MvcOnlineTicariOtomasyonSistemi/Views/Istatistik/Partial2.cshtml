@using MvcOnlineTicariOtomasyonSistemi.Models.Siniflar
@model List<Cariler>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">CARİLER TABLOSU</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        
                        <div class="input-group-append">
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>AD</th>
                            <th>SOYAD</th>
                            <th>ŞEHİR</th>
                            <th>MAİL</th>                    
                        </tr>
                    </thead>
                    <tbody>
                        @{ int sirano = 0;}
                        @foreach (var c in Model)
                        {
                        <tr>
                            <td>@{sirano++;} @sirano</td>
                            <td>@c.CariAd</td>
                            <td>@c.CariSoyad</td>
                            <td>@c.CariSehir</td>
                            <td>@c.CariMail</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
