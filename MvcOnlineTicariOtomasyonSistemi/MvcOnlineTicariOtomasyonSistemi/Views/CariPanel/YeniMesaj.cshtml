    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br/>
<br/>

      
                    <div class="row">
                        <div class="col-md-3">
                            <a href="/CariPanel/YeniMesaj/" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>

                            
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Klasörler</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <ul class="nav nav-pills flex-column">
                                        <li class="nav-item active">
                                            <a href="/CariPanel/GelenMesajlar/" class="nav-link">
                                                <i class="fas fa-inbox"></i> Gelen Mesajlar
                                                <span class="badge bg-gradient-green">@ViewBag.d1</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/CariPanel/GonderilenMesajlar/" class="nav-link">
                                                <i class="far fa-envelope"></i> Gönderilen Mesajlar
                                                <span class="badge bg-gradient-cyan">@ViewBag.d2</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <i class="far fa-file-alt"></i> Taslaklar
                                                <span class="badge bg-gradient-gray">0</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <i class="fas fa-filter"></i> Okunmuş Mesajlar
                                                <span class="badge bg-gradient-fuchsia">0</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <i class="far fa-trash-alt"></i> Çöp Kutusu
                                                <span class="badge bg-gradient-maroon">0</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Filtreler</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <ul class="nav nav-pills flex-column">
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <i class="far fa-circle text-danger"></i>
                                                Önemli Mesajlar
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <i class="far fa-circle text-warning"></i> Promosyonlar
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#" class="nav-link">
                                                <i class="far fa-circle text-primary"></i>
                                                Sosyal
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">Yeni Mesaj</h3>
                                </div>
                                <form class="form-group" method="post">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <input class="form-control" name="Alici" placeholder="Kime:">
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" name="Konu" placeholder="Konu:">
                                        </div>
                                        <div class="form-group">
                                            <textarea id="compose-textarea" name="Icerik" class="form-control" style="height: 300px">
                                        
                                        </textarea>
                                        </div>
                                        @*<div class="form-group">
                                            <div class="btn btn-default btn-file">
                                                <i class="fas fa-paperclip"></i> DOSYA EKLE
                                                <input type="file" name="attachment">
                                            </div>
                                        </div>*@
                                    </div>
                                    <div class="card-footer">
                                        <div class="float-right">
                                            @*<button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> SİL</button>*@
                                            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> GÖNDER</button>
                                        </div>
                                        @*<button type="reset" class="btn btn-default"><i class="fas fa-times"></i> TASLAK</button>*@
                                    </div>
                                </form>
                            </div>
                        </div>
