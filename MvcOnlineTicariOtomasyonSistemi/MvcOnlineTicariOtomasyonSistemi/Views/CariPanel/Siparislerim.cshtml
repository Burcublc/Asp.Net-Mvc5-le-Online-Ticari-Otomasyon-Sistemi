@using MvcOnlineTicariOtomasyonSistemi.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br/>
<br/>
<h3>Sipariş Geçmişim</h3>
<table id="tbl1" class="table table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>ÜRÜN ADI</th>
            <th>TARİH</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM TUTAR</th>           
            <th>DETAYLAR</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Urun.UrunAd</td>
                <td>@Convert.ToDateTime(s.Tarih).ToString("dd/MM/yyyy")</td>
                <td>@s.Adet</td>
                <td>@s.Fiyat</td>
                <td>@s.ToplamTutar</td>                
                <td><a href="#" class="btn btn-warning">DETAYLAR</a></td>
            </tr>
        }
    </tbody>
</table>
