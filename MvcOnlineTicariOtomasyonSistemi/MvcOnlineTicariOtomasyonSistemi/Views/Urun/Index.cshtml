@using MvcOnlineTicariOtomasyonSistemi.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Ürünler</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Ürün Listesi
                @using (Html.BeginForm("Index", "Urun", FormMethod.Get))
                {
                <p>
                    @Html.TextBox("p")
                    <input type="submit" value="Ara.." />
                </p>
                }
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ÜRÜN AD</th>
                                <th>MARKA</th>
                                <th>KATEGORİ AD</th>
                                <th>GÜNCELLE</th>
                                <th>SİL</th>
                                <th>GÖSTER</th>
                                <th>SATIŞ YAP</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ÜRÜN AD</th>
                                <th>MARKA</th>
                                <th>KATEGORİ AD</th>
                                <th>GÜNCELLE</th>
                                <th>SİL</th>
                                <th>GÖSTER</th>
                                <th>SATIŞ YAP</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.UrunAd</td>
                                    <td>@u.Marka</td>
                                    <td>@u.Kategori.KategoriAd</td>
                                    <td><a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-success">GÜNCELLE</a></td>
                                    <td><a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">SİL</a></td>
                                    <td><a href="/UrunDetay/Index/@u.UrunId" class="btn btn-warning">DETAY GÖSTER</a></td>
                                    <td><a href="/Urun/SatisYap/@u.UrunId" class="btn btn-default" style="background-color:darksalmon">SATIŞ YAP</a></td>
                                </tr>
                            }
                        </tbody>

                    </table>

                    <a href="/Urun/UrunEkle" class="btn btn-primary">YENİ OLUŞTUR</a>
                    <br/>
                    <br/>
                    <a href="/Urun/UrunListesi/" class="btn btn-default" style="background-color:burlywood">YAZDIR</a>
                </div>
            </div>
        </div>
    </div>
</main>



