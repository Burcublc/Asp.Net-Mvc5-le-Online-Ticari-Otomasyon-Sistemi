@using MvcOnlineTicariOtomasyonSistemi.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4"></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Fatura Ayrıntıları</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
            </div>
            <div class="card-body">

                <table class="table table-hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>AÇIKLAMA</th>
                            <th>MİKTAR</th>
                            <th>BİRİM FİYAT</th>
                            <th>TUTAR</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fk in Model)
                        {
                            <tr>
                                <td>@fk.FaturaKalemId</td>
                                <td>@fk.Aciklama</td>
                                <td>@fk.Miktar</td>
                                <td>@fk.BirimFiyat</td>
                                <td>@fk.Tutar</td>                            
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Fatura/FaturaKalemEkle/" class="btn btn-primary">YENİ FATURA KALEM EKLE</a>
            </div>
        </div>
</main>

